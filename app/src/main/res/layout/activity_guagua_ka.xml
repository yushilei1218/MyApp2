    android:id="@+id/activity_guagua_ka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdddd"
    android:orientation="vertical"
    tools:context="com.yushilei.myapp.ui.GuaguaKaActivity">

    <com.yushilei.myapp.widget.GuaguaCardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
